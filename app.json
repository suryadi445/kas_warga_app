{
    "expo": {
        "name": "Community App",
        "slug": "kas_warga",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/images/logo.png",
        "scheme": "kaswarga",
        "userInterfaceStyle": "automatic",
        "newArchEnabled": true,
        "ios": {
            "buildNumber": "1",
            "supportsTablet": true
        },
        "android": {
            "versionCode": 1,
            "adaptiveIcon": {
                "backgroundColor": "#E6F4FE",
                "foregroundImage": "./assets/images/logo.png",
                "backgroundImage": "./assets/images/android-icon-background.png",
                "monochromeImage": "./assets/images/android-icon-monochrome.png"
            },
            "edgeToEdgeEnabled": true,
            "predictiveBackGestureEnabled": false,
            "navigationBar": {
                "backgroundColor": "#00000000",
                "barStyle": "light-content"
            },
            "permissions": [
                "READ_EXTERNAL_STORAGE",
                "WRITE_EXTERNAL_STORAGE",
                "READ_MEDIA_IMAGES",
                "POST_NOTIFICATIONS"
            ],
            "package": "com.suryadi445.kas_warga"
        },
        "web": {
            "output": "static",
            "favicon": "./assets/images/favicon.png"
        },
        "plugins": [
            "expo-router",
            [
                "expo-splash-screen",
                {
                    "image": "./assets/images/logo.png",
                    "imageWidth": 200,
                    "resizeMode": "contain",
                    "backgroundColor": "#6366f1",
                    "dark": {
                        "backgroundColor": "#000000"
                    }
                }
            ],
            [
                "expo-notifications",
                {
                    "icon": "./assets/images/logo.png",
                    "color": "#6366f1",
                    "sounds": []
                }
            ]
        ],
        "experiments": {
            "typedRoutes": true,
            "reactCompiler": true
        },
        "extra": {
            "router": {},
            "eas": {
                "projectId": "1e552634-d83a-4a51-8e39-5db9354a1330"
            }
        }
    },
    "ios": {
        "infoPlist": {
            "NSPhotoLibraryUsageDescription": "The app needs access to your photo library to upload the app logo.",
            "NSCameraUsageDescription": "The app needs access to your camera to take photos (if you choose to take a photo)."
        }
    }
}